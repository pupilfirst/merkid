<div class="flex">
  <p class="mr-16" style="font-size: 32px;">
    <% if status == "complete" %>
      <i class="text-right bg-green fa fa-check-circle align-top" aria-hidden="true"></i>
    <% else %>
      <i class="text-right fa fa-circle align-top" aria-hidden="true" style="visibility: hidden"></i>
    <% end %>
  </p>
  <div class="emphasis mb-4">
    <p>
      <span class="inline-block"><%= step %>.</span>&nbsp;<span class="inline-block"><%= title %></span>
    </p>
    <p class="subdued mt-0">
      <%= text %>
    </p>
  </div>
</div>
